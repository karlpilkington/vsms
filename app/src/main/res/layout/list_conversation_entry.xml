<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_border"
    android:padding="5px"
    tools:context=".ConversationListActivity">
    <TextView
        android:id="@+id/name_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dip"
        android:text="@string/test_contact_name"/>
    <TextView
        android:id="@+id/date_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dip"
        android:maxLines="2"
        android:text="@string/test_message_date"/>
    <TextView
        android:id="@+id/message_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dip"
        android:maxLines="2"
        android:text="@string/test_message_text"/>
    <TextView
        android:id="@+id/id_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dip"
        android:maxLines="2"
        android:text="@string/test_message_id"/>
</LinearLayout>